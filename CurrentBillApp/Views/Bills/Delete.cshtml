@model CurrentBillApp.Models.Bill

@{
    ViewData["Title"] = "Delete Bill";
}

<h1>Delete Bill</h1>

<h3>Are you sure you want to delete this bill?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Bill Number
        </dt>
        <dd class="col-sm-10">
            @Model.BillNumber
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToString("yyyy-MM-dd")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
